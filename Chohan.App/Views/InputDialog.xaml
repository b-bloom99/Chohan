<Window x:Class="Chohan.App.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="入力"
        Width="360" Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BgDarkBrush}"
        ShowInTaskbar="False">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- プロンプト -->
        <TextBlock Grid.Row="0" x:Name="PromptText"
                   Text="プロフィール名を入力してください："
                   Foreground="{StaticResource TextPrimaryBrush}"
                   FontFamily="{StaticResource MainFont}"
                   FontSize="12" Margin="0,0,0,8" />

        <!-- テキスト入力 -->
        <TextBox Grid.Row="1" x:Name="InputTextBox"
                 FontFamily="{StaticResource MainFont}"
                 FontSize="13" Padding="6,4"
                 MaxLength="64" />

        <!-- エラーメッセージ -->
        <TextBlock Grid.Row="2" x:Name="ErrorText"
                   Foreground="#FF4533"
                   FontFamily="{StaticResource MainFont}"
                   FontSize="10" Margin="0,4,0,0"
                   Visibility="Collapsed" />

        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="キャンセル"
                    Style="{StaticResource CompactButton}"
                    Width="80" Margin="0,0,8,0"
                    Click="Cancel_Click" />
            <Button Content="OK"
                    Style="{StaticResource CompactButton}"
                    Width="80"
                    Click="OK_Click"
                    IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
