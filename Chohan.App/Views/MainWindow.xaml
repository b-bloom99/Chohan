<Window x:Class="Chohan.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Chohan.App.ViewModels"
        xmlns:conv="clr-namespace:Chohan.App.Converters"
        Title="Chohan"
        Width="280" Height="120"
        MinWidth="200" MinHeight="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:HexToColorConverter x:Key="HexToColor" />
    </Window.Resources>

    <!-- 右クリックメニュー -->
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="▶ 開始" Command="{Binding StartCommand}" />
            <MenuItem Header="■ 停止" Command="{Binding StopCommand}" />
            <Separator />
            <MenuItem Header="⚙ 設定..." Command="{Binding OpenSettingsCommand}" />
            <Separator />
            <MenuItem Header="✕ 終了" Click="MenuItem_Exit_Click" />
        </ContextMenu>
    </Window.ContextMenu>

    <!-- メインコンテンツ -->
    <Border CornerRadius="6"
            Background="{StaticResource BgDarkBrush}"
            BorderBrush="{StaticResource BgLightBrush}"
            BorderThickness="1"
            Padding="10,8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Row 0: タイトルバー (ドラッグ可能) -->
            <DockPanel Grid.Row="0" Margin="0,0,0,6">
                <!-- 状態インジケータ (丸い点) -->
                <Ellipse DockPanel.Dock="Left"
                         Width="10" Height="10"
                         Margin="0,0,6,0"
                         Fill="{Binding StateColorHex, Converter={StaticResource HexToColor}}" />

                <!-- アプリ名 -->
                <TextBlock DockPanel.Dock="Left"
                           Text="Chohan"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontFamily="{StaticResource MainFont}"
                           FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center" />

                <!-- 一致率 (右端) -->
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding CurrentMatchScoreText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontFamily="{StaticResource MainFont}"
                           FontSize="12"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center" />
            </DockPanel>

            <!-- Row 1: 一致率バー -->
            <ProgressBar Grid.Row="1"
                         Style="{StaticResource MatchScoreBar}"
                         Value="{Binding CurrentMatchScore, Mode=OneWay}"
                         Margin="0,0,0,6" />

            <!-- Row 2: ステータス + 勝敗統計 -->
            <DockPanel Grid.Row="2" Margin="0,0,0,4">
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding HistoryStatsText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontFamily="{StaticResource MainFont}"
                           FontSize="10" Opacity="0.7"
                           HorizontalAlignment="Right" VerticalAlignment="Center" />
                <TextBlock Text="{Binding StatusText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontFamily="{StaticResource MainFont}"
                           FontSize="11"
                           TextTrimming="CharacterEllipsis" />
            </DockPanel>

            <!-- Row 3: 操作ボタン (コンパクト) -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                <Button Content="▶ 開始"
                        Style="{StaticResource CompactButton}"
                        Command="{Binding StartCommand}"
                        Margin="0,0,4,0" />
                <Button Content="■ 停止"
                        Style="{StaticResource CompactButton}"
                        Command="{Binding StopCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
